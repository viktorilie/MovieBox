@model MovieBox.Models.ViewModels.MovieViewModel
@using MovieBox.Extensions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create Movie</h2>
<br />

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Movie.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Movie.Name" class="form-control" />
            </div>
            <span asp-validation-for="Movie.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Movie.Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                @Html.TextAreaFor(m => m.Movie.Description)
            </div>
            <span asp-validation-for="Movie.Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Movie.Price" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Movie.Price" class="form-control" />
            </div>
            <span asp-validation-for="Movie.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Movie.Image" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" multiple class="form-control" />
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Movie.GenreId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Movie.GenreId" id="GenreId" asp-items="Model.Genre.ToSelectListItem(Model.Movie.GenreId)" class="form-control"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>




@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
