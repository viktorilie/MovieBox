@model MovieBox.Models.ViewModels.MovieViewModel
@using MovieBox.Extensions
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Movie</h2>
<br />

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <input type="hidden" asp-for="Movie.Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movie.Name" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movie.Name" class="form-control" />
                </div>
                <span asp-validation-for="Movie.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movie.Description" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    @Html.TextAreaFor(m => m.Movie.Description)
                </div>
                <span asp-validation-for="Movie.Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movie.Price" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movie.Price" class="form-control" />
                </div>
                <span asp-validation-for="Movie.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movie.Image" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" multiple class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movie.GenreId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Movie.GenreId" id="GenreId" asp-items="Model.Genre.ToSelectListItem(Model.Movie.GenreId)" class="form-control"></select>
                </div>
            </div>

        </div>
        <div class="col-3 offset-1">
            <img src="@Model.Movie.Image" width="200" style="border-radius:5px; border:1px solid#bbb9b9; " />
        </div>



        <div class="form-group row">
            <div class="col-8 offset-4">
                <partial name="_EditAndBackToListButton" model="Model.Movie.Id" />
            </div>
        </div>
    </div>
</form>




@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
