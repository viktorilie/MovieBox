@model  MovieBox.Models.ViewModels.MovieViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Movie Details </h2>
<br />
<div class="backgroundWhiteBorder row">
    <div class="col-8">
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movie.Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movie.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movie.Description" class="custom-label"></label>
                </div>
                <div class="col-8">
                    @Html.TextAreaFor(m => m.Movie.Description)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movie.Price" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movie.Price" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movie.GenreId" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movie.Genre.Name" class="form-control" />
                </div>
            </div>

        </fieldset>
    </div>
    <div class="col-1"></div>
    <div class="col-3">
        <img src="@Model.Movie.Image" width="200" style="border-radius:5px;border:1px solid #bbb9b9;" />
    </div>
    <div class="col-8">
        <div class="col-8 offset-4">
            <partial name="_DetailsAndBackToListButton" model="Model.Movie.Id" />
        </div>
    </div>
</div>
