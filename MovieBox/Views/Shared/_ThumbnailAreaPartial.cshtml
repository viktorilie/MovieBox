@model IEnumerable<Movie>


@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Genre.Name.Replace(" ",string.Empty) menu-movie">
        <div class="row">
            <h3 class="text-success"> @Model.FirstOrDefault().Genre.Name </h3>
        </div>
    </div>



    @foreach (var item in Model)
    {
        <div class="border border-secondary  rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px">
            <div class="row">
                <div class="col-md-3 col-sm-12">
                    <img src="@item.Image" width="130" style="border-radius:5px;border:1px solid white" />
                </div>
                <div class="col-md-9 col-sm-12">
                    <div class="row pr-3">
                        <div class="col-8">
                            <label class="text-primary text-md-left font-weight-bold" style="font-size:21px;">@item.Name</label>
                        </div>

                        <div class="col-4 text-right" style="color:maroon">
                            <h4>$@item.Price</h4>
                        </div>

                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@Html.Raw(item.Description)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="p-4"></div>

}
